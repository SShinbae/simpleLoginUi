<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityStudentMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/strFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:hint="Your Full Name" />

            <EditText
                android:id="@+id/strStudNo"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="Your Student Number"
                android:inputType="text" />

            <EditText
                android:id="@+id/strEmail"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:ems="10"
                android:hint="your_email@utem.edu.my"
                android:inputType="text" />

            <EditText
                android:id="@+id/strBirthdate"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:ems="10"
                android:hint="Your Birthday"
                android:inputType="date" />

            <RadioGroup
                android:id="@+id/rgGender"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/strGender"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:text="Gender: " />

                <RadioButton
                    android:id="@+id/rbMale"
                    android:layout_width="92dp"
                    android:layout_height="53dp"
                    android:text="Male" />

                <RadioButton
                    android:id="@+id/rbFemale"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:text="Female" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="State Origin" />

            <Spinner
                android:id="@+id/spnState"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:entries="@array/state_arrays" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAdd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                app:srcCompat="@drawable/baseline_add_home_24" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/strState"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>